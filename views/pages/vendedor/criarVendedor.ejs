<%- contentFor('secao') %>
    <div class="form container">
        <h1><a href="/vendedor" class="button"><img src="/images/icons/arrow_back_white_24dp.svg" alt=""></a> Novo vendedor</h1>
        <form method="POST" action="/vendedor/criar" enctype="multipart/form-data">
            <span>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" required>
            </span>
            <span>
                <label for="email">Email:</label>
                <input type="text" id="email" name="email">
            </span>
            <span>
                <label for="telefone">Telefone:</label>
                <input type="text" id="telefone" name="telefone">
            </span>
            <span>
                <label for="endereco">Endere√ßo:</label>
                <input type="text" id="endereco" name="endereco">
            </span>
            <span>
                <label for="meta">Meta (R$):</label>
                <input type="number" step="0.01" id="meta" name="meta"  required>
            </span>
            <span>
                <label for="imagem">Imagem:</label>
                <input type="file" id="imagem" name="imagem" accept="image/*">
            </span>
            <button type="submit">Cadastrar vendedor</button>
        </form>
    </div>