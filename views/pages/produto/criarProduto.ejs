<%- contentFor('secao') %>
    <div class="form container">
        <h1><a href="/produto" class="button"><img src="/images/icons/arrow_back_white_24dp.svg" alt=""></a> Novo produto</h1>
        <form method="POST" action="/produto/criar" enctype="multipart/form-data">
            <span>
                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" >
            </span>
            <span>
                <label for="categoria">Categoria:</label>
                <input type="text" id="categoria" name="categoria">
            </span>
            <span>
                <label for="estoque">Estoque:</label>
                <input type="number" id="estoque" name="estoque" value="1">
            </span>
            <span>
                <label for="valor">Valor:</label>
                <input type="number" step="0.01" id="valor" name="valor" value="10">
            </span>
            <span>
                <label for="imagem">Imagem:</label>
                <input type="file" id="imagem" name="imagem" accept="image/*">
            </span>
            <span>
                <label for="descricao">Descrição:</label>
                <textarea id="descricao" name="descricao" rows="5" cols="40"></textarea>
            </span>
            <button type="submit">Adicionar produto</button>
        </form>
    </div>